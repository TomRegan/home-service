# If not running interactively, don't do anything
[ -z "$PS1" ] && return

CCD=$([ -h ~/.bash_profile ] || [ -h ~/.bashrc ] && {
    if [ -f ~/.bash_profile ]; then
        _d=$(dirname $(readlink ~/.bash_profile))
    else
        _d=$(dirname $(readlink ~/.bashrc))
    fi
    [[ $_d =~ home$ ]] && echo ${_d%home} || echo $_d
} || {
    # we're probably in serious trouble here, but let's try
    echo ~/
})


source $CCD/lib/homie
for file in $CCD/libexec/*.bash; do
    load $file
done

unset PATH

include path
include prompt
include aliases
include http_proxy
include manpath

include +apps/wpg

include +lang/java
#include +lang/ocaml
include +lang/python
include +lang/rust
include +lang/golang

include +comp/git
include +comp/rust
include +comp/docker
include +comp/docker-machine
include +comp/ssh
include +comp/wpgctl
include +comp/azure

unset CCD

# Local Variables:
# mode: shell-script
# End:
